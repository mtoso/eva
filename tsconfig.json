{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es6"],
        "allowJs": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": false,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": [
        "src",
        "src/**/*.eva"
    ],
    "exclude": [
        "**/__tests__",
        "**/node_modules",
        "**/.*/"
    ]
}